<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!-- use the following meta to force IE use its most up to date rendering engine -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <title> @ViewBag.PageTitle </title>
    <meta name="description" content="@ViewBag.PageDescription" />

    <!-- bootstrap & fontawesome -->
    @Styles.Render("~/Content/assets/css/bootstrap.css", "~/Content/assets/css/font-awesome.css")

    <!-- page specific plugin styles -->
    @RenderSection("pagepluginstyles", required: false)

    <!-- text fonts -->
    @Styles.Render("~/Content/assets/css/ace-fonts.css")

    <!-- ace styles -->
    @Styles.RenderFormat("<link href=\"{0}\" rel=\"stylesheet\" class=\"ace-main-stylesheet\" id=\"main-ace-style\"/>", "~/Content/assets/css/ace.css")

    <!--[if lte IE 9]>
        @Styles.RenderFormat("<link href=\"{0}\" rel=\"stylesheet\" class=\"ace-main-stylesheet\"/>", "~/Content/assets/css/ace-part2.css")
        @Styles.Render("~/Content/assets/css/ace-ie.css")
    <![endif]-->

    <!-- inline styles related to this page -->
    @RenderSection("pagestyles", required: false)

    <!-- ace settings handler -->
    @Scripts.Render("~/Content/assets/js/ace-extra.js")

    <!-- HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries -->
    <!--[if lte IE 8]>
        @Scripts.Render("~/Content/assets/js/html5shiv.js", "~/Content/assets/js/respond.js")
    <![endif]-->
</head>

<body class="no-skin">
    <div class="navbar" id="navbar">
        <!-- navbar goes here -->
    </div>

    <div class="main-container" id="main-container">
        <div class="sidebar responsive" id="sidebar">
            <!-- sidebar goes here -->
        </div>

        <div class="main-content">
            <div class="breadcrumbs">
                <!-- breadcrumbs goes here -->
            </div>

            <div class="page-content">
                <!-- setting box goes here if needed -->

                <div class="row">
                    <div class="col-xs-12">
                        <!-- page content goes here -->
                    @RenderBody()
                    </div><!-- /.col -->
                </div><!-- /.row -->

            </div><!-- /.page-content -->
        </div><!-- /.main-content -->
        <!-- footer area -->
        <div class="footer">
            <div class="footer-inner">
                <!-- #section:basics/footer -->
                <div class="footer-content">
                    <span class="bigger-120">
                        <span class="blue bolder">Ace</span>
                        Application &copy; 2013-2014
                    </span>

                    &nbsp; &nbsp;
                    <span class="action-buttons">
                        <a href="#">
                            <i class="ace-icon fa fa-twitter-square light-blue bigger-150"></i>
                        </a>

                        <a href="#">
                            <i class="ace-icon fa fa-facebook-square text-primary bigger-150"></i>
                        </a>

                        <a href="#">
                            <i class="ace-icon fa fa-rss-square orange bigger-150"></i>
                        </a>
                    </span>
                </div>

                <!-- /section:basics/footer -->
            </div>
        </div>

        <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
            <i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
        </a>
    </div><!-- /.main-container -->
    <!-- list of script files -->
    <!--[if IE]>
        <script>
            window.jQuery || document.write('<script src="@Url.Content("~/Content/assets/js/jquery1x.js")"><\/script>');
        </script>
    <![endif]-->

    <!--[if !IE]><!-->
        <script>
            window.jQuery || document.write('<script src="@Url.Content("~/Content/assets/js/jquery.js")"><\/script>');
        </script>
    <!--<![endif]-->
    <script>
        if ('ontouchstart' in document.documentElement) {
            document.write('<script src="@Url.Content("~/Content/assets/js/jquery.mobile.custom.js")"><\/script>');
        }
    </script>
    @Scripts.Render("~/Content/assets/js/bootstrap.js")

    <!-- page specific plugin scripts -->
    @RenderSection("pagepluginscripts", required: false)

    <!-- ace scripts -->
    @*@Scripts.Render("~/Content/assets/js/elements.scroller.js", "~/Content/assets/js/elements.colorpicker.js"
    , "~/Content/assets/js/elements.fileinput.js", "~/Content/assets/js/elements.typeahead.js"
    , "~/Content/assets/js/elements.wysiwyg.js", "~/Content/assets/js/elements.spinner.js"
    , "~/Content/assets/js/elements.treeview.js", "~/Content/assets/js/elements.wizard.js"
    , "~/Content/assets/js/elements.aside.js"
    , "~/Content/assets/js/ace.js", "~/Content/assets/js/ace.ajax-content.js"
    , "~/Content/assets/js/ace.touch-drag.js", "~/Content/assets/js/ace.sidebar.js"
    , "~/Content/assets/js/ace.sidebar-scroll-1.js", "~/Content/assets/js/ace.submenu-hover.js"
    , "~/Content/assets/js/ace.widget-box.js", "~/Content/assets/js/ace.settings.js"
    , "~/Content/assets/js/ace.settings.js", "~/Content/assets/js/ace.settings-rtl.js"
    , "~/Content/assets/js/ace.settings-skin.js", "~/Content/assets/js/ace.widget-on-reload.js"
    , "~/Content/assets/js/ace.searchbox-autocomplete.js")*@
    @Scripts.Render("~/Content/assets/js/ace-elements.js", "~/Content/assets/js/ace.js");

    <!-- inline scripts related to this page -->
    @RenderSection("pagescripts", required: false)
</body>
</html>