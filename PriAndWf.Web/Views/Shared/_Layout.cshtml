<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!-- use the following meta to force IE use its most up to date rendering engine -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <title> @ViewBag.PageTitle </title>
    <meta name="description" content="@ViewBag.PageDescription" />

    <!-- bootstrap & fontawesome -->
    @Styles.Render("~/Content/bootstrap.min.css", "~/Content/font-awesome.min.css")

    <!-- page specific plugin styles -->
    @RenderSection("PagePluginStyles", required: false)

    <!-- ace styles -->
    @Styles.RenderFormat("<link href=\"{0}\" rel=\"stylesheet\" class=\"ace-main-stylesheet\" id=\"main-ace-style\"/>", "~/Content/plugins/ace/css/ace.min.css")

    <!--[if lte IE 9]>
        @Styles.RenderFormat("<link href=\"{0}\" rel=\"stylesheet\" class=\"ace-main-stylesheet\"/>", "~/Content/plugins/ace/css/ace-part2.css")
        @Styles.Render("~/Content/plugins/ace/css/ace-ie.css")
    <![endif]-->

    <!-- inline styles related to this page -->
    @RenderSection("PageStyles", required: false)

    <!-- ace settings handler -->
    @Scripts.Render("~/Content/plugins/ace/js/ace-extra.min.js")

    <!-- HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries -->
    <!--[if lte IE 8]>
        @Scripts.Render("~/Scripts/html5shiv.min.js", "~/Scripts/respond.min.js")
    <![endif]-->
</head>

<body class="no-skin">
    <div class="navbar" id="navbar">
        <!-- navbar goes here -->
    </div>

    <div class="main-container" id="main-container">
        <div class="sidebar responsive" id="sidebar">
            <!-- sidebar goes here -->
        </div>

        <div class="main-content">
            <div class="breadcrumbs">
                <!-- breadcrumbs goes here -->
            </div>

            <div class="page-content">
                <!-- setting box goes here if needed -->

                <div class="row">
                    <div class="col-xs-12">
                        <!-- page content goes here -->
                    @RenderBody()
                    </div><!-- /.col -->
                </div><!-- /.row -->

            </div><!-- /.page-content -->
        </div><!-- /.main-content -->
        <!-- footer area -->
        <div class="footer">
            <div class="footer-inner">
                <!-- #section:basics/footer -->
                <div class="footer-content">
                    <span class="bigger-120">
                        <span class="blue bolder">Ace</span>
                        Application &copy; 2013-2014
                    </span>

                    &nbsp; &nbsp;
                    <span class="action-buttons">
                        <a href="#">
                            <i class="ace-icon fa fa-twitter-square light-blue bigger-150"></i>
                        </a>

                        <a href="#">
                            <i class="ace-icon fa fa-facebook-square text-primary bigger-150"></i>
                        </a>

                        <a href="#">
                            <i class="ace-icon fa fa-rss-square orange bigger-150"></i>
                        </a>
                    </span>
                </div>

                <!-- /section:basics/footer -->
            </div>
        </div>

        <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
            <i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
        </a>
    </div><!-- /.main-container -->
    <!-- list of script files -->
    <!--[if lt IE 9]>
        <script>
            window.jQuery || document.write('<script src="@Url.Content("~/Scripts/jquery-1.12.4.min.js")"><\/script>');
        </script>
    <!--[else]>
        <script>
            window.jQuery || document.write('<script src="@Url.Content("~/Scripts/jquery-3.2.1.min.js")"><\/script>');
        </script>
    <![endif]-->

    @*<!--[if lte IE 8]>
        <script>
            window.jQuery || document.write('<script src="@Url.Content("~/Scripts/jquery-1.12.4.min.js")"><\/script>');
        </script>
    <![endif]-->
    <!--[if (gte IE 9)|(!IE)]>
        <script>
            window.jQuery || document.write('<script src="@Url.Content("~/Scripts/jquery-3.2.1.min.js")"><\/script>');
        </script>
    <![endif]-->*@

    <script>
        if ('ontouchstart' in document.documentElement) {
            document.write('<script src="@Url.Content("~/Scripts/jquery.mobile-1.4.5.min.js")"><\/script>');
        }
    </script>
    @Scripts.Render("~/Scripts/bootstrap.min.js")

    <!-- page specific plugin scripts -->
    @RenderSection("PagePluginScripts", required: false)

    @Scripts.Render("~/Content/plugins/ace/js/ace-elements.min.js", "~/Content/plugins/ace/js/ace.min.js");

    <!-- inline scripts related to this page -->
    @RenderSection("PageScripts", required: false)
</body>
</html>