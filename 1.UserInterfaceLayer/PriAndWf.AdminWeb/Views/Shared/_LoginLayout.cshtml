@{
    ViewBag.SiteTitle = "AceApplication";
}

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8" />
    <!-- use the following meta to force IE use its most up to date rendering engine -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <title> @ViewBag.Title -@ViewBag.SiteTitle </title>
    <meta name="description" content="@ViewBag.Description" />

    <!-- list of css files -->
    <!-- 1.bootstrap.css -->
    @Styles.Render("~/Content/plugins/assets/css/bootstrap.css")
    <!-- 2.fontawesome.css -->
    @Styles.Render("~/Content/plugins/assets/css/font-awesome.css")<!-- only if needed -->
    <!-- 3.ace-fonts.css -->
    @Styles.Render("~/Content/plugins/assets/css/ace-fonts.css")<!-- you can also use google hosted fonts -->
    <!-- 4.third party css files -->
    @RenderSection("PagePluginStyles", required: false)<!-- page specific plugin styles -->
    <!-- 5.ace.css -->
    @Styles.RenderFormat("<link href=\"{0}\" rel=\"stylesheet\" class=\"ace-main-stylesheet\" id=\"main-ace-style\"/>", "~/Content/plugins/assets/css/ace.css")
    <!-- 6.ace-part2.css -->
    <!--[if lte IE 9]>
        @Styles.RenderFormat("<link href=\"{0}\" rel=\"stylesheet\" class=\"ace-main-stylesheet\"/>", "~/Content/plugins/assets/css/ace-part2.css")
    <![endif]-->
    <!-- 7.ace-skins.css -->
    @*@Styles.Render("~/Content/plugins/assets/css/ace-skins.css")<!-- only if needed -->*@
    <!-- 8.ace-rtl.css -->
    @Styles.Render("~/Content/plugins/assets/css/ace-rtl.css")<!-- only if needed -->
    <!-- 9.ace-ie.css -->
    <!--[if lte IE 9]>
        @Styles.Render("~/Content/plugins/assets/css/ace-ie.css")
    <![endif]-->
    <!-- 10.inline styles -->
    @RenderSection("PageInlineStyles", required: false)

    <!-- list of script files -->
    <!-- 1.html5shiv.js & respond.js -->
    <!--[if lte IE 8]>
        @Scripts.Render("~/Content/plugins/assets/js/html5shiv.js", "~/Content/plugins/assets/js/respond.js")
    <![endif]-->
</head>

<body class="login-layout light-login">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- list of script files -->
    <!-- 1.jquery.js & jquery1x.js -->
    <!--[if !IE]> -->
    @Scripts.Render("~/Content/plugins/assets/js/jquery.js")
    <!-- <![endif]-->
    <!--[if lte IE 9]>
        @Scripts.Render("~/Content/plugins/assets/js/jquery1x.js")
    <![endif]-->
    <!-- 2.bootstrap.js -->
    @Scripts.Render("~/Content/plugins/assets/js/bootstrap.js")
    <!-- 3.third party js files -->
    @RenderSection("PagePluginScripts", required: false)
    <!-- 4.inline javascripts -->
    @RenderSection("PageInlineScripts", required: false)
</body>
</html>
